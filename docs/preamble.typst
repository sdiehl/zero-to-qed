// Preamble for From Zero to QED
//
// If you're reading this, you too have discovered that fiddling with margins and font sizes
// is the most productive form of procrastination known to academia. Welcome, fellow traveler.

#import "@preview/mitex:0.2.6": *
#import "@preview/codly:1.3.0": *
#import "@preview/codly-languages:0.1.8": *

// =============================================================================
// DOCUMENT SETUP
// =============================================================================

// Accent color used throughout
#let accent-color = rgb("#2563eb")

// Font configuration (TeX Gyre Pagella is Palatino-compatible, available on Linux)
#set text(
  font: ("Palatino", "TeX Gyre Pagella", "DejaVu Serif"),
  size: 11pt,
  lang: "en",
  ligatures: true,  // Enable ff, fi, fl, ffi, ffl ligatures
)

// Code font (use default monospace)
#show raw: set text(size: 9.5pt)

// Paragraph spacing and hanging punctuation
#set par(leading: 0.7em, justify: true, hanging-indent: 0em)

// Enable optical margin alignment (hanging punctuation)
#set text(hyphenate: true)

// Link styling
#show link: it => text(fill: accent-color)[#it]

// =============================================================================
// TYPOGRAPHIC REFINEMENTS
// =============================================================================

// Small caps for common acronyms (API, IO, CPU, etc.)
#show regex("[A-Z]{2,4}"): it => {
  smallcaps(lower(it))
}

// Pull quote styling for emphasized passages
#let pullquote(body) = {
  block(
    width: 100%,
    inset: (left: 2em, right: 2em, top: 1em, bottom: 1em),
    [
      #set text(size: 12pt, style: "italic", fill: luma(60))
      #set par(leading: 0.8em)
      #body
    ]
  )
}

// =============================================================================
// THEOREM ENVIRONMENTS
// =============================================================================

#let theorem-counter = counter("theorem")

#let theorem-box(type: "Theorem", fill-color: rgb("#eff6ff"), stroke-color: accent-color, body) = {
  theorem-counter.step()
  block(
    width: 100%,
    inset: 12pt,
    radius: 4pt,
    stroke: (left: 3pt + stroke-color),
    fill: fill-color,
    [
      #text(weight: "bold", fill: stroke-color)[#type #context theorem-counter.display().]
      #h(6pt)
      #body
    ]
  )
}

#let theorem(body) = theorem-box(
  type: "Theorem",
  fill-color: rgb("#eff6ff"),
  stroke-color: accent-color,
  body
)

#let lemma(body) = theorem-box(
  type: "Lemma",
  fill-color: rgb("#f0fdf4"),
  stroke-color: rgb("#16a34a"),
  body
)

#let definition(body) = theorem-box(
  type: "Definition",
  fill-color: rgb("#fefce8"),
  stroke-color: rgb("#ca8a04"),
  body
)

#let proposition(body) = theorem-box(
  type: "Proposition",
  fill-color: rgb("#fdf4ff"),
  stroke-color: rgb("#a855f7"),
  body
)

#let corollary(body) = theorem-box(
  type: "Corollary",
  fill-color: rgb("#fff1f2"),
  stroke-color: rgb("#e11d48"),
  body
)

#let example(body) = theorem-box(
  type: "Example",
  fill-color: rgb("#f8fafc"),
  stroke-color: rgb("#64748b"),
  body
)

// Proof environment with QED tombstone
#let proof(body) = {
  block(above: 1em, below: 1em)[
    #text(style: "italic", weight: "medium")[Proof.]
    #h(6pt)
    #body
    #h(1fr)
    #box(width: 0.8em, height: 0.8em, fill: black)
  ]
}

// =============================================================================
// ADMONITIONS (TIP, NOTE, WARNING, etc.)
// =============================================================================

